<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:scaleType="fitStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bookmark"
            app:tint="#F9A825"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantitative Researcher"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_company_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Công Ty Cổ Phần Pi Associates"
            android:textSize="16sp"
            android:textColor="#5F6368"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_category_tag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Data Analytics - Warehousing, &amp; Business Intelligence"
                android:textSize="13sp"
                android:textColor="#5F6368"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_gray_capsule"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_location_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TP.HCM"
                android:textSize="13sp"
                android:textColor="#5F6368"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:background="@drawable/bg_gray_capsule" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 ngày trước"
            android:textSize="14sp"
            android:textColor="#9AA0A6"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_tags"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 triệu – 30 triệu/tháng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time_ago"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>