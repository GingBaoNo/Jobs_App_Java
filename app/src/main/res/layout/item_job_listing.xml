<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Company Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Bookmark Icon -->
        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_bookmark"
            android:visibility="gone"
            android:contentDescription="Bookmark"
            app:tint="@color/yellow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Job Title -->
        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quantitative Researcher"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_company_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Company Name -->
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Công Ty Cổ Phần Pi Associates"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tags Container -->
        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Category Tag -->
            <TextView
                android:id="@+id/tv_category_tag"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Data Analytics - BI"
                android:textSize="12sp"
                android:textColor="@color/gray_700"
                android:paddingHorizontal="14dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_gray_capsule"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxWidth="200dp" />

            <!-- Location Tag -->
            <TextView
                android:id="@+id/tv_location_tag"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="TP.HCM"
                android:textSize="12sp"
                android:textColor="@color/gray_700"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="14dp"
                android:gravity="center"
                android:background="@drawable/bg_gray_capsule" />
        </LinearLayout>

        <!-- Time Ago & Salary Row -->
        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="18 ngày trước"
            android:textSize="13sp"
            android:textColor="@color/gray_500"
            app:layout_constraintTop_toBottomOf="@+id/ll_tags"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Salary -->
        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 triệu – 30 triệu/tháng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_600"
            app:layout_constraintTop_toTopOf="@+id/tv_time_ago"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
