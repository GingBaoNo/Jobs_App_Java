<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề công việc -->
        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề công việc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Mức lương -->
        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mức lương"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="4dp" />

        <!-- Trạng thái ứng tuyển -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="#2196F3"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="start" />

        <!-- Ngày ứng tuyển -->
        <TextView
            android:id="@+id/tv_apply_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày ứng tuyển"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp" />

        <!-- Thông tin CV đã ứng tuyển -->
        <TextView
            android:id="@+id/tv_cv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CV: Chưa có"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Nút hủy ứng tuyển -->
        <Button
            android:id="@+id/btn_cancel_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:text="Hủy ứng tuyển"
            android:textSize="12sp"
            android:backgroundTint="#f44336"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>