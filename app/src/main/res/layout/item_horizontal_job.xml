<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/iv_company_logo_horizontal"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:contentDescription="Company Logo"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:backgroundTint="@color/primary_100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Job Title -->
        <TextView
            android:id="@+id/tv_job_title_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Tiêu đề công việc"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toTopOf="@+id/iv_company_logo_horizontal"
            app:layout_constraintStart_toEndOf="@+id/iv_company_logo_horizontal"
            app:layout_constraintEnd_toStartOf="@+id/tv_status_badge_horizontal" />

        <!-- Company Name -->
        <TextView
            android:id="@+id/tv_company_name_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên công ty"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title_horizontal"
            app:layout_constraintStart_toStartOf="@+id/tv_job_title_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tv_job_title_horizontal" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tv_status_badge_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mở"
            android:textSize="11sp"
            android:textColor="@color/secondary_600"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:background="@drawable/border_rounded_small"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Salary -->
        <TextView
            android:id="@+id/tv_salary_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="15 - 25 triệu VNĐ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_600"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/iv_company_logo_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Short Description -->
        <TextView
            android:id="@+id/tv_short_description_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Mô tả ngắn công việc"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_salary_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location -->
        <TextView
            android:id="@+id/tv_location_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hà Nội"
            android:textSize="11sp"
            android:textColor="@color/gray_500"
            android:drawableStart="@drawable/ic_location2"
            android:drawablePadding="4dp"
            android:drawableTint="@color/gray_500"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tv_short_description_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_application_deadline_horizontal" />

        <!-- Application Deadline -->
        <TextView
            android:id="@+id/tv_application_deadline_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/10/2025"
            android:textSize="11sp"
            android:textColor="@color/gray_500"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="4dp"
            android:drawableTint="@color/gray_500"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/tv_location_horizontal"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider_horizontal"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/gray_200"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Approved Tag -->
        <TextView
            android:id="@+id/btn_tag_approved_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="14dp"
            android:text="Đã duyệt"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/border_rounded_small2"
            android:backgroundTint="@color/secondary_500"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/divider_horizontal"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- View Details Button -->
        <Button
            android:id="@+id/btn_view_details_horizontal"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Xem chi tiết"
            android:textSize="12sp"
            android:textColor="@color/primary_600"
            app:strokeColor="@color/primary_600"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:paddingHorizontal="14dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_tag_approved_horizontal"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
