<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_company_logo_horizontal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_boss"
            android:contentDescription="Company Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tên Vị trí/Công việc -->
        <TextView
            android:id="@+id/tv_job_title_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tiêu đề công việc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_company_logo_horizontal"
            app:layout_constraintEnd_toStartOf="@+id/tv_status_badge_horizontal" />

        <!-- Tên Công ty -->
        <TextView
            android:id="@+id/tv_company_name_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên công ty"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title_horizontal"
            app:layout_constraintStart_toStartOf="@+id/tv_job_title_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tv_job_title_horizontal" />

        <!-- Badge Tình trạng -->
        <TextView
            android:id="@+id/tv_status_badge_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mở"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/border_rounded_small"
            app:layout_constraintTop_toTopOf="@+id/tv_job_title_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_company_name_horizontal"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Lương -->
        <TextView
            android:id="@+id/tv_salary_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="15 - 25 triệu VNĐ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_company_logo_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Mô tả ngắn -->
        <TextView
            android:id="@+id/tv_short_description_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mô tả ngắn công việc"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tv_salary_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Địa điểm -->
        <TextView
            android:id="@+id/tv_location_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textSize="12sp"
            android:textColor="#757575"
            android:drawableStart="@drawable/ic_location2"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_short_description_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_application_deadline_horizontal" />

        <!-- Hạn nộp -->
        <TextView
            android:id="@+id/tv_application_deadline_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/10/2025"
            android:textSize="12sp"
            android:textColor="#757575"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/tv_location_horizontal"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider_horizontal"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tag "Đã duyệt" -->
        <TextView
            android:id="@+id/btn_tag_approved_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Đã duyệt"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/border_rounded_small2"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider_horizontal"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nút "Xem chi tiết" -->
        <Button
            android:id="@+id/btn_view_details_horizontal"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Xem chi tiết"
            android:textSize="12sp"
            android:textColor="#2196F3"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp"
            android:textAllCaps="false"
            android:paddingHorizontal="16dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_tag_approved_horizontal"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>