<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:elevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="Logo công ty"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:backgroundTint="@color/primary_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tên Vị trí/Công việc -->
        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Tên công việc"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_status_badge"
            app:layout_constraintStart_toEndOf="@+id/iv_company_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tên Công ty -->
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên công ty"
            android:textColor="@color/primary_600"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_job_title"
            app:layout_constraintStart_toStartOf="@+id/tv_job_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title" />

        <!-- Badge Tình trạng -->
        <TextView
            android:id="@+id/tv_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rounded_small"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Mở"
            android:textColor="@color/secondary_600"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_company_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_job_title" />


        <!-- Lương (Màu xanh lá cây) -->
        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="3,000,000 VNĐ"
            android:textColor="@color/secondary_600"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_company_logo" />

        <!-- Mô tả ngắn -->
        <TextView
            android:id="@+id/tv_short_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Mô tả ngắn công việc"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_salary" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_short_description" />

        <!-- Tag "Đã duyệt" -->
        <TextView
            android:id="@+id/btn_tag_approved"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/border_rounded_small2"
            android:backgroundTint="@color/secondary_500"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Đã duyệt"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <!-- Tag "Mở" -->
        <TextView
            android:id="@+id/btn_tag_open"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/border_rounded_small2"
            android:backgroundTint="@color/primary_500"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Mở"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/btn_tag_approved"
            app:layout_constraintTop_toTopOf="@+id/btn_tag_approved" />

        <!-- Nút "Xem chi tiết" -->
        <Button
            android:id="@+id/btn_view_details"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Xem chi tiết"
            android:textAllCaps="false"
            android:textColor="@color/primary_600"
            android:textSize="14sp"
            android:drawableEnd="@drawable/ic_next"
            android:drawableTint="@color/primary_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_tag_approved"
            app:layout_constraintBottom_toBottomOf="@+id/btn_tag_approved" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>