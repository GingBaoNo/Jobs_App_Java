<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    tools:context=".fragments.UserProfileFragment">

    <!-- Header (Tiêu đề trang) -->
    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hồ sơ người xin việc"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView chứa toàn bộ nội dung hồ sơ -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Layout chia cột (sử dụng LinearLayouts lồng nhau hoặc cân nhắc Grid/Flexbox nếu dùng thư viện) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 1. Card: Avatar & Actions (Cột bên trái trên web) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <!-- Avatar (Sử dụng CircleImageView) -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_default_avatar"
                            android:contentDescription="Ảnh đại diện" />

                        <TextView
                            android:id="@+id/tv_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tên đầy đủ"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tv_current_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hồ sơ chưa hoàn thiện"
                            android:textSize="14sp"
                            android:textColor="#808080"
                            android:layout_marginTop="4dp"/>

                        <Button
                            android:id="@+id/btn_edit_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Chỉnh sửa hồ sơ"
                            android:backgroundTint="#3B82F6"
                            android:textColor="@android:color/white"
                            android:paddingVertical="12dp"
                            app:cornerRadius="4dp" />

                        <Button
                            android:id="@+id/btn_download_cv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tải CV"
                            android:backgroundTint="@android:color/white"
                            android:textColor="#3B82F6"
                            android:paddingVertical="12dp"
                            app:strokeColor="#3B82F6"
                            app:strokeWidth="1dp"
                            app:cornerRadius="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 2. Card: Quick Info (Thông tin nhanh - Cột bên trái dưới web) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_quick_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin nhanh"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Email"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <!-- Số điện thoại -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="SĐT"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <!-- Giới tính -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giới tính"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <!-- Ngày sinh -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ngày sinh"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <!-- Trình độ học vấn -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Trình độ học vấn"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_education"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 3. Card: Basic Information (Thông tin cơ bản - Cột bên phải trên web) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_basic_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Thông tin cơ bản"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <Button
                                android:id="@+id/btn_edit_basic_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chỉnh sửa"
                                android:textColor="#3B82F6"
                                android:textSize="12sp"
                                android:minWidth="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <!-- Họ tên -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Họ tên:"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_basic_full_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                        <!-- Giới thiệu bản thân -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giới thiệu:"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_introduction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang cập nhật..."
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 4. Card: Career Goal (Mục tiêu nghề nghiệp) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_career_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mục tiêu nghề nghiệp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <Button
                                android:id="@+id/btn_edit_career_goal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chỉnh sửa"
                                android:textColor="#3B82F6"
                                android:textSize="12sp"
                                android:minWidth="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_career_goal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:layout_marginTop="8dp"
                            android:textColor="#555555"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                
                <!-- 5. Card: Desired Position (Vị trí mong muốn) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_desired_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Vị trí mong muốn"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <Button
                                android:id="@+id/btn_edit_desired_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chỉnh sửa"
                                android:textColor="#3B82F6"
                                android:textSize="12sp"
                                android:minWidth="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        </LinearLayout>
                        
                        <!-- Vị trí mong muốn -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vị trí mong muốn:"
                            android:textSize="14sp"
                            android:textColor="#555555"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/tv_desired_position"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Mức lương mong muốn -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mức lương mong muốn:"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                        <TextView
                            android:id="@+id/tv_desired_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Loại lương mong muốn -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loại lương mong muốn:"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                        <TextView
                            android:id="@+id/tv_desired_salary_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Hình thức làm việc -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hình thức làm việc:"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                        <TextView
                            android:id="@+id/tv_work_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Thời gian mong muốn -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thời gian mong muốn:"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                        <TextView
                            android:id="@+id/tv_work_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <!-- Loại thời gian làm việc -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loại thời gian làm việc:"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                        <TextView
                            android:id="@+id/tv_work_schedule_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa cập nhật"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                
                <!-- 6. Card: Work Experience (Kinh nghiệm làm việc) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_work_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kinh nghiệm làm việc"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <Button
                                android:id="@+id/btn_edit_work_experience"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chỉnh sửa"
                                android:textColor="#3B82F6"
                                android:textSize="12sp"
                                android:minWidth="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_work_experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chưa có kinh nghiệm được cập nhật"
                            android:layout_marginTop="8dp"
                            android:textColor="#555555"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 7. Card: Total Work Experience (Tổng số năm kinh nghiệm) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_total_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tổng số năm kinh nghiệm"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tv_total_experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 năm"
                            android:layout_marginTop="8dp"
                            android:textColor="#555555"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 8. Card: CV Information (Thông tin CV) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_cv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin CV"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Trạng thái CV:"
                                android:textColor="#555555"/>
                            <TextView
                                android:id="@+id/tv_cv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa upload"
                                android:textColor="#555555"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_view_cv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:text="Xem CV"
                            android:backgroundTint="#3B82F6"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="16dp"
