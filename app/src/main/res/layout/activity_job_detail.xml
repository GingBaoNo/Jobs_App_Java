<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD: THÔNG TIN CHUNG CÔNG TY -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Logo công ty -->
                    <ImageView
                        android:id="@+id/iv_company_logo_detail"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_boss"
                        android:contentDescription="Logo công ty" />

                    <!-- Tên công ty -->
                    <TextView
                        android:id="@+id/tv_company_name_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên công ty"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Tiêu đề công việc -->
                    <TextView
                        android:id="@+id/tv_job_title_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiêu đề công việc"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Mức lương -->
                    <TextView
                        android:id="@+id/tv_job_salary_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mức lương"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Hạn nộp -->
                    <TextView
                        android:id="@+id/tv_job_deadline_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hạn nộp: 09/10/2025"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Nút ứng tuyển và lưu công việc -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btn_apply_job"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="Ứng tuyển"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            app:cornerRadius="8dp" />

                        <Button
                            android:id="@+id/btn_save_job"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="Lưu công việc"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:backgroundTint="#4CAF50"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <!-- Nút xem trên bản đồ -->
                    <Button
                        android:id="@+id/btn_view_on_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Xem trên bản đồ"
                        android:textSize="16sp"
                        android:backgroundTint="@color/primary_500"
                        app:cornerRadius="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD: MÔ TẢ CÔNG VIỆC -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả công việc"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                    <!-- Nội dung mô tả -->
                    <TextView
                        android:id="@+id/tv_job_description_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sfdsfs"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD: THÔNG TIN CÔNG VIỆC -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin công việc"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <!-- SỬ DỤNG LAYOUT MỚI: item_title_value_row -->
                    <!-- Vị trí làm việc (thay đổi thành vị trí công việc cụ thể) -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_position" />
                    <!-- Ngành (thêm mới) -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_discipline" />
                    <!-- Mức lương -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_salary" />
                    <!-- Công ty -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_company" />
                    <!-- Hình thức làm việc -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_work_type" />
                    <!-- Cấp độ kinh nghiệm -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_experience_level" />
                    <!-- Số lượng -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_quantity" />
                    <!-- Giới tính -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_gender" />
                    <!-- Ngày đăng -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_postdate" />
                    <!-- Hạn nộp -->
                    <include layout="@layout/item_title_value_row" android:id="@+id/info_row_deadline" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD: YÊU CẦU CÔNG VIỆC -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yêu cầu công việc"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                    <!-- Danh sách Yêu cầu -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/list_requirements">

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD: QUYỀN LỢI -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quyền lợi"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginBottom="12dp"/>

                    <!-- Danh sách Quyền lợi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/list_benefits">

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>